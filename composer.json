{
    "name": "chez14/f3-ilgar",
    "description": "A simple migration tool for Fat-Free Framework",
    "type": "library",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/chez14/f3-ilgar",
    "keywords": [
        "migration",
        "migrate",
        "database",
        "ilgar",
        "fat-free framework",
        "f3",
        "world trigger",
        "bomber"
    ],
    "authors": [
        {
            "name": "Chris",
            "homepage": "https://christianto.net",
            "email": "chris@christianto.net",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "monolog/monolog": "^1.23",
        "psr/log": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "CHEZ14\\Ilgar\\": "src/"
        }
    },
    "require-dev": {
        "bcosca/fatfree-core": "^3.6",
        "chez14/phpcs": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "style": "phpcs --standard=./vendor/chez14/phpcs/src/CHEZ14Standards src/",
        "style:format": "phpcbf --standard=./vendor/chez14/phpcs/src/CHEZ14Standards src/ tests/",
        "test": "phpunit --testdox"
    }
}
