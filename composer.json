{
    "name": "chez14/f3-ilgar",
    "description": "A simple migration tool for Fat-Free Framework",
    "type": "library",
    "license": "GPL-3.0-only",
    "homepage": "https://github.com/chez14/f3-ilgar",
    "keywords": [
        "migration",
        "migrate",
        "database",
        "ilgar",
        "fat-free framework",
        "f3",
        "world trigger",
        "bomber"
    ],
    "authors": [
        {
            "name": "Chris",
            "homepage": "https://christianto.net",
            "email": "chris@christianto.net",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "psr/log": "^1.1"
    },
    "suggest": {
        "monolog/monolog": "Allows more advanced logging of the application flow",
        "mongodb/mongodb": "Enable the MongoDB Support for your project"
    },
    "autoload": {
        "psr-4": {
            "CHEZ14\\Ilgar\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CHEZ14\\Ilgar\\Test\\": "test/"
        }
    },
    "require-dev": {
        "bcosca/fatfree-core": "^3.5",
        "chez14/phpcs": "^1.0",
        "squizlabs/php_codesniffer": "^3.6",
        "phpunit/phpunit": "^9.5",
        "php-mock/php-mock-phpunit": "^2.6",
        "monolog/monolog": "^1.23||^2.0||^3.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "scripts": {
        "style": "phpcs src/ test/",
        "style:format": "phpcbf src/ test/",
        "test": "phpunit --testdox"
    }
}
